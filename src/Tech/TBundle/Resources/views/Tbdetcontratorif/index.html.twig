{% extends '::layout.html.twig' %}

{% block content -%}
    <h1>Lista de Contratos</h1>
<br><br>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id.</th>
                <th>Nro-Contrato</th>
                <th>Acciones</th>
            </tr>
            
        </thead>
        
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('Contratos_show', { 'id': entity.id }) }}">{{ entity.id }}</a>...</td>
                <td>{{ entity.pkInroContrato }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('Contratos_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('Contratos_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('Contratos_new') }}">
                Crear Nuevo Contrato
            </a>
        </li>
    </ul>
    {% endblock %}
