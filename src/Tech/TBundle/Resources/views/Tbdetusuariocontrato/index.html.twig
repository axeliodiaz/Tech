{% extends '::layout.html.twig' %}

{% block content %}
    <h1>Lista de Contratos Asociados</h1>
<div class="container" >
<section class="register">
    <table class="records_list">
        <thead>
               <tr>
                <td align="center"  width="100"><h4 ><strong>Nro-Contrato</strong></h4></td>
                
                <td align="center"  width="150"><h4 ><strong>Nro-Rif</strong></h4></td>
                
                <td align="center"  width="100"><h4 ><strong>Nombre</strong></h4></td>
                
                <td align="center"  width="200"><h4 ><strong>Razón Social</strong></h4></td>
                
                <td align="center"  width="200"><h4 ><strong>Dirección Fiscal</strong></h4></td>
                
                
                
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
              <tr>
               
                <td align="center" width="100">{{ entity.fkInroContrato.pkInroContrato }}</td>
                
                <td align="center" width="150">{{ entity.fkInroContrato.fkIrif }}</td>
                
                <td align="center" width="100">{{ entity.fkInroContrato.fkIrif.vnombre }}</td>
                
                <td align="center" width="200">{{ entity.fkInroContrato.fkIrif.vrazonSocial }}</td>
                
                <td align="center" width="200">{{ entity.fkInroContrato.fkIrif.vdireccionFiscal }}</td>
                
            </tr>
            
        {% endfor %}
        </tbody>
    </table>
<br>
</section>
        </div>
    <br>
    {% if((app.session.get('usuario_rol')=="Empleado") or
        (app.session.get('usuario_rol')=="Administrador"))%}
        <ul>
        <li>
            <a href="{{ path('Contratos_new') }}">
                <h4>Crear Nuevo Contrato</h4>
            </a>
        </li>
    </ul>
    {%endif%}
   {% endblock %}
