{% extends '::layout.html.twig' %}

{% block content -%}
    <h1>Listado de Empresas</h1>
      <div class="container" >

    <section class="register">

    <table class="records_list">
        <thead>
            <tr>
            <td align="center"  width="80"><h4 ><strong>Rif</strong></h4></td>
            <td width="40"></td>
            <td align="center"  width="150"><h4 ><strong>Razón Social</strong></h4></td>
            <td width="40"></td>
            <td align="center"  width="300"><h4 ><strong>Dirección Fiscal</strong></h4></td>
            <td width="40"></td>
            <td align="center"  width="80"><h4 ><strong>Acciones</strong></h4></td>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                
                <td align="center"  width="80">{{ entity.pkIrif }}</td>
                <td width="40"></td>
                <td align="center"  width="80">{{ entity.vrazonSocial }}</td>
                <td width="40"></td>
                <td align="center"  width="80">{{ entity.vdireccionFiscal }}</td>
                <td width="40"></td>
                <td align="center"  width="80">
                <ul>
                    <li>
                        <a href="{{ path('Empresa_edit', { 'id': entity.id }) }}"><img width="40" height="40"  title="Editar" src="/bundles/techt/images/Draft.png"></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </section>
          </div>
<br><br>
        <ul>
        <li>
            <a href="{{ path('Empresa_new') }}">
                <h4>Crear nueva Empresa</h4>
            </a>
        </li>
    </ul>
    {% endblock %}
