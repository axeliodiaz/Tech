{% extends '::layout.html.twig' %}

{% block content %}
    <h1> Proyectos</h1>

    <div class="container" >

        <section class="register">
            <table class="records_list">
                <thead>
                    <tr>
                        <td width="20"></td>
                        <td align="left"  width="120"><h4 ><strong>Fecha Notificación</strong></h4></td>
                        <td width="40"></td>
                        <td align="left"  width="120"><h4 ><strong>Número Cotización</strong></h4></td>
                        <td width="40"></td>
                        <td align="left"  width="90"><h4 ><strong>Estatus </strong></h4></td>
                        <td width="40"></td>
                        <td align="left"  width="120"><h4 ><strong>Lider Asignado</strong></h4></td>
                        <td width="40"></td>
                        <td align="left"  width="120"><h4 ><strong>Instalador Asignado</strong></h4></td>

                        {#<td align="center"  width="80"><h4 ><strong>Acciones</strong></h4></td>#}
                    </tr>
                </thead>

            </table>
            <div id="accordion">    
                {% for  key,cot in cotizaciones%}

                    {% for  key2,proyectos in cot%}

                        {% if key2=='uno'%}
                            <div>
                                <table>
                                    <thead>
                                        <tr bgcolor="#EEEEEE">
                                                
                                            <td height="25" align="center"  width="160">Código Equipos Cotizados</td>
                                            <td width="20"></td>
                                            <td align="center"  width="80">Cantidad Cotizada</td>
                                            <td width="20"></td>
                                            <td align="center"  width="160">Código Equipos a Entregar</td>
                                            <td width="20"></td>
                                            <td align="center"  width="140">Entregado</td>
                                            <td width="20"></td>
                                            <td align="center"  width="140">Pendiente</td>
                                            <td width="20"></td>
                                            <td align="center"  width="140">Por Entregar</td>
                                        </tr>
                                    </thead>
                                </table>

                                {% for  clave,proyecto  in proyectos%}

                                    <table>
                                        <tr>

                                            <td height="25" align="center"  width="160"><a href="{{ path('Obra_show', { 'id': proyecto.id   }) }}">{{ proyecto.icodproyecto  }}</a></td>
                                            <td width="20"></td>
                                            <td align="center"  width="80">{{ proyecto.icantidad }}</td>
                                            <td width="20"></td>
                                            <td align="center"  width="160">{{ proyecto.icodproyecto|replace({'S': 'V'})  }}</td>
                                            <td width="20"></td>
                                            <td align="center"  width="140">{{ proyecto.icantidadEntregada}}</td>
                                            <td width="20"></td>
                                            <td align="center"  width="140">{{ proyecto.icantidad-proyecto.icantidadEntregada}}</td>
                                            <td width="20"></td>
                                            <td align="center"  width="140">{{ proyecto.icantidaddisponible}}</td>
                                            <td width="20"></td>
                                            
                                            

                                        </tr>
                                    </table>

                                {%endfor%}
                            </div>
                        {%else%}
                            {% if key2=='dos'%}
                            <table>
                                <tr>

                                    <td align="left"  width="110">{% if cot['dos'].dfecha %}{{ cot['dos'].dfecha|date('d-m-Y') }}{% endif %}</td>
                                    <td width="40"></td>
                                    <td align="left"  width="120"><a href="{{ path('Cotizacion_show', { 'id': cot['dos'].id }) }}">{{cot['dos'].codcotizacion}}</a></td>
                                    <td width="40"></td>
                                    <td align="left"  width="90">{{ cot['dos'].fkiidestatusinstalacion.vdescripcion }}</td>
                                    <td width="40"></td>
                                    <td align="left"  width="120">{% if cot['dos'].tbdetliderpmo %}{{ cot['dos'].tbdetliderpmo.valias}} {%else%} 'No Asignado' {%endif%}</td>
                                    <td width="40"></td>
                            
                                    <td align="left"  width="120">{% if cot['tres'].fkIidTbdettecnico%}{{ cot['tres'].fkIidTbdettecnico.valias}} {%else%} 'No Asignado' {%endif%}</td>
                            
                                </tr>
                            </table>
                            {%endif%}
                        {%endif%}

                    {%endfor%}

                {%endfor%}
                
            </div>  



            </setion>
    </div>

    <script>
        $(function () {
            $("#accordion").accordion({
                active: false,
                collapsible: true,
                heightStyle: "content",
                navigation: true,
            });
        });
        
         $('#accordion input[type="checkbox"]').click(function(e) {
                e.stopPropagation();
            });
            $("a").click(function(event){ event.stopPropagation(); });
    </script>
    
{% endblock %}
