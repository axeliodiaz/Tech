                                <table>
                                    <thead>
                                        <tr bgcolor="#EEEEEE">

                                            <td height="25" align="center"  width="160">Código Equipos Cotizados</td>
                                            <td width="20"></td>
                                            <td align="center"  width="80">Cantidad Cotizada</td>
                                            <td width="20"></td>
                                            <td align="center"  width="160">Código Equipos a Entregar</td>
                                            <td width="20"></td>
                                            <td align="center"  width="140">Entregado</td>
                                            <td width="20"></td>
                                            <td align="center"  width="140">Por Entregar</td>
                                            <td width="20"></td>
                                            <td align="center"  width="140">Por Retirar</td>
                                            <td width="20"></td>
                                            
                                            <td align="center"  width="100">Acciones </td>


                                        </tr>
                                    </thead>
                                </table>

                                {% for  clave,proyecto  in proyectos%}

                                    <table>
                                        <tr>

                                            <td height="25" align="center"  width="160"><a href="{{ path('Obra_show', { 'id': proyecto.id   }) }}">{{ proyecto.icodproyecto  }}</a></td>
                                            <td width="20"></td>
                                            <td align="center"  width="80">{{ proyecto.icantidad }}</td>
                                            <td width="20"></td>
                                            <td align="center"  width="160">{{ proyecto.icodproyecto|replace({'S': 'V'})  }}</td>
                                            <td width="20"></td>
                                            <td align="center"  width="140">{{ proyecto.icantidadEntregada}}</td>
                                            <td width="20"></td>
                                            <td align="center"  width="140">{{ proyecto.icantidadrecibida}}</td>
                                            <td width="20"></td>
                                            <td align="center"  width="140">{{ proyecto.icantidaddisponible}}</td>
                                            <td width="20"></td>
                                            
                                            <td align="center"  width="100">
                                                <ul>
                                                    <li>
                                                        <ul>
                                                            
                                                            <a onclick="confirmObraInst({idObra: '{{proyecto.id}}',idCot: '{{proyecto.fkIcodcotizacion}}'});"><img  width="30"  height="30" title="Confirmar Recepción de Equipo" src="/bundles/techt/images/UserSecCheck.jpg"/></a>
                                                            <div style="display:none"  id="d{{proyecto.id}}" title="Confirmacion de Instalación">
                                                                <table>
                                                                    <tr>
                                                                        <td>
                                                                <span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;">                                                    
                                                                    </span> 
                                                                   Confirma que se instaló correctamente la <br><br>
                                                                   <table>
                                                                       <tr>
                                                                           <td width="80px">Cantidad:</td> <td><b>{{proyecto.icantidadrecibida}}</b><br></td>
                                                                       </tr>
                                                                       <tr><td>Equipo: </td><td><b>{{ proyecto.icodproyecto|replace({'S': 'V'})  }}</b><br></td></tr> 
                                                                   <tr><td>Obra: </td><td><b>{{ proyecto.icodproyecto}}</b><br></td></tr>
                                                                   <tr><td>Técnico: </td><td><b>{% if cot['tres'].fkIidTbdettecnico%}
                                                                       {{ cot['tres'].fkIidTbdettecnico.valias}} 
                                                                   {%else%} 'No Asignado' {%endif%}</b><br></td></tr>
                                                                   <tr><td>Proyecto: </td><td><b>{{proyecto.fkIcodcotizacion.codcotizacion}}</b><br><br></td></tr>
                                                                   </table> 
                                                                   </td>
                                                                    </tr>
                                                                      <tr>
                                                                      <td align="left">Se encuentra Usted seguro?</td>
                                                                    </tr> 
                                                                </table>
                                                                
                                                            </div>
                                                                     
                                                        </ul>
                                                                     
                                                    </li>

                                                    
                                                    
                                                </ul>

                                            </td>


                                        </tr>
                                    </table>

                                {%endfor%}
                            </div>
                        {%else%}
                            {% if key2=='dos'%}
                            <table>
                                <tr>

                                    <td align="left"  width="110">{% if cot['dos'].dfecha %}{{ cot['dos'].dfecha|date('d-m-Y') }}{% endif %}</td>
                                    <td width="40"></td>
                                    <td align="left "  width="110"><a href="{{ path('Cotizacion_show', { 'id': cot['dos'].id }) }}">{{cot['dos'].codcotizacion}}</a></td>
                                    <td width="40"></td>
                                    <td align="left"  width="120">{{ cot['dos'].fkiidestatusinstalacion.vdescripcion }}</td>
                                    <td width="40"></td>
                                    <td align="left"  width="110">{% if cot['tres'].fkIidTbdettecnico%}{{ cot['tres'].fkIidTbdettecnico.valias}} {%else%} 'No Asignado' {%endif%}</td>
                                    <td width="40"></td>
                                    <td align="left"><a href="{{ path('Cotizacion_editLiderInst', { 'id': cot['dos'].id }) }}"><img  width="45"  height="30" title="Modificar Instalación en Masa" src="/bundles/techt/images/package_install.png"/></a></td>
                                </tr>
                            </table>
                            {%endif%}
                        {%endif%}

                    {%endfor%}

                {%endfor%}
                
            </div>  



            </setion>
    </div>

    <script>
       $(function () {
            $("#accordion").accordion({
                active: false,
                collapsible: true,
                heightStyle: "content",
                navigation: true,
            });
        });
         $('#accordion input[type="checkbox"]').click(function(e) {
                e.stopPropagation();
            });
            $("a").click(function(event){ event.stopPropagation(); });   
    </script>


    <script>
        function confirmObraInst(options) {
            $("#d" + options.idObra).dialog({
                resizable: false,
                height: 300,
                width: 400, 
                modal: true,
                title: 'Confirmación de Instalación',
                buttons: {
                    "No": function () {
                        
                        $(this).dialog("close");
                    },
                    Si: function () {
                        var ientrega=$("#fn"+options.idObra).val();
                        var data = {
                            idObra: options.idObra,
                            iEntrega: ientrega,
                            idCot: options.idCot
                        };
                        $.ajax({
                            type: 'post',
                            url: '{{ path("confirmObraInst") }}',
                            data: data,
                            dataType: 'json',
                            success: function (data) {
                                if (data.error !== undefined && data.error !== '') {
                                    alert(data.error);
                                } else {
                                    $("#d" + options.idObra).dialog("close");
                                }
                            },
                            error: function (e, ts, et) {
                                alert(ts);
                            }
                        });
                        //
                    }
                }
            });
        }
    </script>
{% endblock %}
