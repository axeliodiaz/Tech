    <script>
        $(function () {
            $("#accordion").accordion({
                active: false,
                collapsible: true,
                heightStyle: "content",
                navigation: true,
            });
        });
        
         $('#accordion input[type="checkbox"]').click(function(e) {
                e.stopPropagation();
            });
            $("a").click(function(event){ event.stopPropagation(); });
    </script>


    <script>
        function confirmObra(options) {
            $("#d" + options.idObra).dialog({
                resizable: false,
                height: 250,
                width: 400, 
                modal: true,
                title: 'Confirmación de Existencia',
                buttons: {
                    "No": function () {
                        
                        $(this).dialog("close");
                    },
                    Si: function () {
                        var ientrega=$("#fn"+options.idObra).val();
                        var data = {
                            idObra: options.idObra,
                            iEntrega: ientrega,
                            idCot: options.idCot
                        };
                        $.ajax({
                            type: 'post',
                            url: '{{ path("confirmObra") }}',
                            data: data,
                            dataType: 'json',
                            success: function (data) {
                                if (data.error !== undefined && data.error !== '') {
                                    alert(data.error);
                                } else {
                                    $("#d" + options.idObra).dialog("close");
                                }
                            },
                            error: function (e, ts, et) {
                                alert(ts);
                            }
                        });
                        //
                    }
                }
            });
        }
    </script>
