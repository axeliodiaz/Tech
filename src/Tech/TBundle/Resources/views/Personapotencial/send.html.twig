                </tr>
                </table>
            <table>
                <tr>  
                    <td width="250"></td>
                    <td width="200">  
                  {% for respuesta in Respuestas[pregunta.id] %}
                        <input  type="checkbox" name="{{respuesta.IdResp.id}}"  value="{{ respuesta.IdPreg.id}}" /> {{ respuesta.IdResp.vdescripcion}}<br>
                      {% set m=m+1 %}
