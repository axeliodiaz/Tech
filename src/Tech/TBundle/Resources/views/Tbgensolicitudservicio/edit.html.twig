{% extends '::layout.html.twig' %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('flash_info') %}
<div class="isa_info">
        {{ flashMessage }}
</div>
<br><br>
{% endfor %}
{% for flashMessage in app.session.flashbag.get('flash_warning') %}
<div class="isa_warning">
        {{ flashMessage }}
</div>
<br><br>
{% endfor %}

{% for flashMessage in app.session.flashbag.get('flash_error') %}
<div class="isa_error">
        {{ flashMessage }}
</div>
<br><br>
{% endfor %}

{% for flashMessage in app.session.flashbag.get('flash_success') %}
<div class="isa_success">
        {{ flashMessage }}
</div>
<br><br>
{% endfor %}

<h1>Edición de Solicitud de Servicio</h1>

<div class="container" >

    <section class="register">
<form action="{{ path('SolicitudServicio_update',{ 'id': entity.id }) }}" method="post" class="login">
    
              {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}  
            <table>
                <tr>
                    
                         <div style="display: none;">     
                {{ form_row(edit_form.tbgentiposolicitud, {'required' : false})}}
                {{ form_row(edit_form.fkIidEspSol, {'required' : false})}}
                {{ form_row(edit_form.vdetalles, {'required' : false})}}
                {{ form_row(edit_form.dfechaCreacion, {'required' : false})}}
                {{ form_row(edit_form.fkIidUsuaDatos, {'required' : false})}}
                {{ form_row(edit_form.iid, {'required' : false})}}                      
                {{ form_row(edit_form.submit, { 'label': 'Registrar' }) }}  
                {{ form_row(edit_form.vdescripcion, {'required' : false})}}
                {{ form_row(edit_form.vpersona, {'required' : false})}}
                {{ form_row(edit_form.vtelefono, {'required' : false})}}
                {{ form_row(edit_form.vcorreo, {'required' : false})}}
                {{ form_row(edit_form.vdireccion, {'required' : false})}}
                             
                             
                </div>  
      
             <tr>
                <td width="210" height="20">Número de Solicitud: </td>
                <td><em>{{ entity.id }}</em></td>
            </tr>
            <tr>
                <td width="210" height="20">Usuario </td>
                <td><em>{{ entity.fkIidUsuaDatos.vnombre }} {{ entity.fkIidUsuaDatos.vapellido }}</em></td>
            </tr>
            <tr>
                 <td width="210" height="20">Tipo Solicitud: </td>
                 <td><em>{{ entity.fkIidEspSol.fkIidEspSol.vnombreTipoSol }}</em></td>
            </tr>
            <tr>
                 <td width="210" height="20">Especificación: </td>
                <td><em>{{ entity.fkIidEspSol.vnombreEspSol }}</em></td>
            </tr>
            {%if ((entity.fkIidEspSol.id==7) or 
                    (entity.fkIidEspSol.id==8) or
                     (   entity.fkIidEspSol.id==9))  %}
            <tr>
                 <td width="210" height="20">Descripción: </td>
                <td><em>{{ entity.vdescripcion }}</em></td>
            </tr>
            

            {% elseif((entity.fkIidEspSol.id==2) or (entity.fkIidEspSol.id==5))%}
            <tr>
                 <td width="210" height="20">Detalle: </td>
                <td><em>{{ entity.vdetalles }}</em></td>
            </tr>
            
                    {% elseif(entity.fkIidEspSol.id==1 )%}
            <tr>
                 <td width="210" height="20">Persona: </td>
                 <td><em>{{ entity.vpersona}}</em></td>
            </tr>
            <tr>
                 <td width="210" height="20">Correo: </td>
                <td><em>{{ entity.vcorreo}}</em></td>
            </tr>
            <tr>
                 <td width="210" height="20">Telefono:  </td>
                <td><em>{{ entity.vtelefono }}</em></td>
            </tr>
            <tr>
                 <td width="210" height="20">Direccion: </td>
                <td><em>{{ entity.vdireccion}}</em></td>
                    
                {%endif %}
            <tr>
                 <td width="210" height="20">Fecha Creación: </td>
                <td><em>{{ entity.dfechaCreacion|date('d-m-Y H:i:s') }}</em></td>
            </tr>
            <div class="error" id="det">
                {{ form_errors(edit_form.fkIidEstatus) }}</div>       
                    <table>  <td width="210">
                {{ form_label(edit_form.fkIidEstatus, 'Estado:') }}</td>
                    <td>{{ form_widget(edit_form.fkIidEstatus,{'required': false}) }}</td>
                    </table>
                <tr>
                    <td width="95"></td>
                    <td width="95"></td>
                    <td width="95"></td>
                    <td width="95"></td>
                    <td width="95"></td>
                    <td width="95"></td>
                
                <td>    
                    <p class="submit">   
                        <input type="submit" name="commit" value="Editar">
                        </p>
                </td>
                    
                </tr>
                

                {{ form_end(edit_form) }} 
            </table>       
        </form>  <br>
        <ul class="record_actions">
    <li>
        <a href="{{ path('SolicitudServicio') }}">
            Listado de Solicitudes de Servicios
        </a>
    </li>

</ul>
        </section>
        </div>

{% endblock %}
